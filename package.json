{
  "name": "chat-clean-architecture",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Chat application using clean architecture",
  "scripts": {
    "ng": "nx",
    "use:nestjs": "npx rimraf node_modules && npm install",
    "use:bun": "npx rimraf node_modules && bun install",
    "start:ui": "nx serve chat-chat-client-main-ng",
    "start:api": "nx serve chat-chat-server-main-api",
    "start:api:bun": "nx serve:bun chat-chat-server-main-api",
    "start:redis": "redis-server",
    "dev": "(start npm run start:ui && start npm run start:api) || (npm run start:ui & npm run start:api)",
    "start": "npm run dev",
    "build": "nx build",
    "build:api": "nx build chat-chat-server-main-api",
    "build:api:bun": "nx build:bun chat-chat-server-main-api",
    "test": "jest test tests --verbose --maxWorkers=1 --logHeapUsage",
    "dep-graph": "nx dep-graph",
    "bench-test-send-message": "node tests/bench/send-message-bench-test.js",
    "bench-test-get-rooms": "node tests/bench/get-user-rooms-bench-test.js",
    "bench-test-get-messages": "node tests/bench/get-messages-room-bench-test.js",
    "bench-connect-users": "artillery run  tests/bench/connect-users-bench-test.yml",
    "kill-redis": "sudo kill -9 $(lsof -t -i:6379)"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
